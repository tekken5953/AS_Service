<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/device_list_item_bg"
    android:layout_margin="15dp"
    android:elevation="10dp"
    android:translationZ="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/deviceListTypeIv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:transitionName="imageTran"
        android:elevation="10dp"
        android:translationZ="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/deviceListNameTv"
        style="@style/basicBoldTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deviceListTypeIv"
        android:layout_marginTop="17dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:transitionName="deviceNameTran"/>

    <ImageView
        android:id="@+id/deviceListRightArrow2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/right_arrow"
        app:layout_constraintTop_toTopOf="@+id/deviceListNameTv"
        app:layout_constraintBottom_toBottomOf="@+id/deviceListNameTv"
        app:layout_constraintStart_toEndOf="@+id/deviceListNameTv"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/deviceListBusiness"
        style="@style/basicBoldTextView"
        app:layout_constraintTop_toTopOf="@+id/deviceListRightArrow2"
        app:layout_constraintBottom_toBottomOf="@+id/deviceListRightArrow2"
        app:layout_constraintStart_toEndOf="@+id/deviceListRightArrow2"
        android:layout_marginStart="5dp"
        android:transitionName="businessTypeTran"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/deviceListSnTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:transitionName="serialNumberTran"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@+id/deviceListNameTv"
        app:layout_constraintStart_toStartOf="@+id/deviceListNameTv"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/deviceListCqiTitle"
        style="@style/basicRegularTextView"
        android:text="@string/cqi_colon"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/deviceListSnTv"
        app:layout_constraintStart_toStartOf="@+id/deviceListNameTv"
        android:layout_marginTop="15dp"/>

    <com.aslib.AsTextView
        android:id="@+id/deviceListCqiIndex"
        style="@style/basicRegularTextView"
        app:sort="cqi"
        app:layout_constraintStart_toEndOf="@+id/deviceListCqiTitle"
        app:layout_constraintTop_toTopOf="@+id/deviceListCqiTitle"
        app:layout_constraintBottom_toBottomOf="@+id/deviceListCqiTitle"
        android:layout_marginEnd="30dp"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/deviceListVirusTitle"
        style="@style/basicRegularTextView"
        android:text="@string/virus_colon"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/deviceListCqiTitle"
        app:layout_constraintStart_toStartOf="@+id/deviceListCqiTitle"
        android:layout_marginTop="10dp"/>

    <com.aslib.AsTextView
        android:id="@+id/deviceListVirusIndex"
        style="@style/basicRegularTextView"
        app:sort="virus"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@+id/deviceListVirusTitle"
        app:layout_constraintTop_toTopOf="@+id/deviceListVirusTitle"
        app:layout_constraintBottom_toBottomOf="@+id/deviceListVirusTitle"
        android:textSize="17sp"
        android:layout_marginStart="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>