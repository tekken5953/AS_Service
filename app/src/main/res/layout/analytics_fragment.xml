<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.fragment.AnalyticsFragment">

        <TextView
            android:id="@+id/titleLocationTv"
            style="@style/basicBoldTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/analytics_text_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/apiScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/googleMapFrame"
            app:layout_constraintTop_toBottomOf="@+id/titleLocationTv">
            <TextView
                android:id="@+id/getApiTextView"
                style="@style/basicBoldTextView"
                android:gravity="start" />
        </ScrollView>

        <FrameLayout
            android:id="@+id/googleMapFrame"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/apiScrollView"
            app:layout_constraintBottom_toTopOf="@+id/apiReferenceText"/>

        <TextView
            android:id="@+id/apiReferenceText"
            style="@style/basicRegularTextView"
            app:layout_constraintBottom_toTopOf="@+id/getApiButton"
            app:layout_constraintStart_toStartOf="@+id/getApiButton"
            app:layout_constraintEnd_toEndOf="@+id/getApiButton"
            android:layout_marginBottom="2dp"
            android:textStyle="italic"
            android:textSize="14sp"
            android:maxEms="18"
            android:text="본 앱에 올려진 데이터들은 “CC BY-SA(저작자표시-동일조건변경허락)” 로 공개되고 있습니다."/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getApiButton"
            style="@style/basicButton"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:text="GET DATA"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
