<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="basicButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/modeViewColor</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/lineseed_be</item>
    </style>

    <style name="basicEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/modeTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="mainLoginItemField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:lines">1</item>
        <item name="elevation">15dp</item>
        <item name="android:translationZ">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/second_item_bg</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="basicRegularTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lineseed_rg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/modeTextColor</item>
    </style>

    <style name="basicBoldTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lineseed_be</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/modeTextColor</item>
    </style>

    <style name="Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/modeViewColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/modeViewColor</item>
    </style>
</resources>